<%= email_header %>

<table>
<%
  @email_data.each do |(category, properties)|
%>
  <tr>
    <td colspan="2" style="padding-top:10px;font-weight:bold;border-bottom:solid gray 1px;"><%= category %></td>
  </tr>

  <% properties.each do |(label, value)| %>
    <tr>
      <td style="padding-right:10px;"><%= label %>: </td><td><%= value %></td>
    </tr>
  <% end %>

<% end %>
</table>
